@model Student
<div class="container">
    <h3> Add New Student</h3>
<br/>
<form method="post" asp-action="AddStudent" asp-controller="Student">
    <div class="form-group">
        <label asp-for="Name">Enter Name Here</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Discipline"></label>
        <input type="text" asp-for="Discipline" class="form-control" />
        <span asp-validation-for="Discipline"></span>
    </div>
    <div class="form-group">
        <label asp-for="BirthDate"></label>
        <input asp-for="BirthDate" class="form-control" type="datetime-local" />
        <span asp-validation-for="BirthDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <input type="text" asp-for="Address" class="form-control" />
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Add Student" class="btn btn-primary" />
    </div>
</form>
</div> 